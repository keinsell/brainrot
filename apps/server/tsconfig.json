{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "target": "ESNext",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    //    "traceResolution": true,
    //    "assumeChangesOnlyAffectDirectDependencies": true,
    //    // TODO: Migrate codebase to verbatimModuleSyntax in future
    //    "verbatimModuleSyntax": false,
    "emitBOM": true,
    //    "declarationMap": true,
    "generateCpuProfile": "profile.cpuprofile",
    "noErrorTruncation": false,
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "useDefineForClassFields": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": false,
    "traceResolution": false,
    "extendedDiagnostics": true,
    //    "tsBuildInfoFile": ".tsbuildinfo",
    "downlevelIteration": true,
    "assumeChangesOnlyAffectDirectDependencies": false,
    "composite": true,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "@types/node",
      "@types/express-session",
      //      "./src/types/**/*.d.ts",
      "./src/vendor/prisma/index.d.ts"
    ],
    "paths": {
      "@boundary/*": [
        "./src/boundaries/*"
      ],
      "@filesystem/*": [
        "./src/utilities/filesystem-utils/*"
      ],
      "@lib/security/*": [
        "./src/common/libraries/security/*"
      ],
      "@storage": [
        "./src/infrastructure/storage/*"
      ],
      "@infrastructure": [
        "./src/infrastructure/*"
      ],
      "@libraries/*": [
        "./src/libraries/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": false
      },
      {
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      },
      {
        "transform": "tsc-progress",
        "title": "Compiling..."
      },
      {
        "transform": "@nestia/core/lib/transform",
        /**
         * Validate request body.
         *
         *   - "assert": Use typia.assert() function
         *   - "is": Use typia.is() function
         *   - "validate": Use typia.validate() function
         *   - "assertEquals": Use typia.assertEquals() function
         *   - "equals": Use typia.equals() function
         *   - "validateEquals": Use typia.validateEquals() function
         */
        "validate": "assert",
        /**
         * Validate JSON typed response body.
         *
         *   - "assert": Use typia.assertStringify() function
         *   - "is": Use typia.isStringify() function
         *   - "validate": Use typia.validateStringify() function
         *   - "stringify": Use typia.stringify() function, but dangerous
         *   - null: Just use JSON.stringify() function, without boosting
         */
        "stringify": "assert"
      },
      {
        "transform": "typia/lib/transform"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "",
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts",
    "src/**/*.e2e-test.ts"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}