{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "@types/node",
      "./node_modules/@prisma/client/index.d.ts",
      "./node_modules/.pnpm/@prisma+client@5.4.2_prisma@5.4.2/node_modules/@prisma/client/index.d.ts"
    ],
    "paths": {
      "@boundary/*": [
        "./src/boundaries/*"
      ],
      "@filesystem/*": [
        "./src/utilities/filesystem-utils/*"
      ],
      "@storage": [
        "./src/infrastructure/storage/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": false
      },
      //      {
      //        "transform": "@formatjs/ts-transformer",
      //        "import": "transform",
      //        "type": "config",
      //        "overrideIdFn": "[sha512:contenthash:base64:6]",
      //        "ast": true
      //      },
      {
        "transform": "tsc-progress",
        "title": "Transpiration"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts",
    "src/**/*.e2e-test.ts"
  ]
}
