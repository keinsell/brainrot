{
  "quiet": true,
  "delay": 2000,
  "signal": "SIGQUIT",
  "watch": [
    "src",
    ".env",
    "dist/.env"
  ],
  "exitcrash": true,
  "ext": ".ts,.js",
  "ignore": [
    "src/externals/compodoc"
  ],
  "exec": "clear && pnpm build:tsc && node --enable-source-maps --max-old-space-size=6000 --max-semi-space-size=512 --v8-pool-size=8 --zero-fill-buffers dist/src/main.js"
}